<script>
  document.querySelectorAll('.mega > li > a').forEach(a=>{
    a.addEventListener('click',e=>{
      if(window.innerWidth<=992){
        const li=a.parentElement; const hasPanel=li.querySelector('.panel');
        if(hasPanel){ e.preventDefault(); li.classList.toggle('active'); }
      }
    });
  });
  const MAP=[{k:'pcb',u:'/services/pcb'},{k:'hardware',u:'/services/hardware'},{k:'firmware',u:'/services/firmware'},
             {k:'software',u:'/services/software'},{k:'iot',u:'/services/iot'},{k:'python',u:'/services/software#python'},
             {k:'react',u:'/services/software#web'},{k:'node',u:'/services/software#web'},{k:'esp32',u:'/services/hardware#arm'}];
  const formSearch=document.getElementById('utilSearchForm'), field=document.getElementById('utilSearch');
  formSearch.addEventListener('submit',e=>{
    e.preventDefault();
    const q=field.value.trim().toLowerCase(); if(!q) return;
    const hit=MAP.find(x=>q.includes(x.k)||x.k.includes(q));
    location.href=hit?hit.u:'/#services';
  });
  const policyModal=document.getElementById('policyModal');
  const openPolicy=document.querySelector('.js-policy');
  const closePolicy=document.getElementById('policyClose');
  function hidePolicy(){ policyModal.classList.remove('show-policy'); policyModal.setAttribute('aria-hidden','true'); }
  function showPolicy(){ policyModal.classList.add('show-policy'); policyModal.removeAttribute('aria-hidden'); }
  openPolicy.addEventListener('click',e=>{ e.preventDefault(); showPolicy(); });
  closePolicy.addEventListener('click',hidePolicy);
  policyModal.addEventListener('click',e=>{ if(e.target===policyModal) hidePolicy(); });
  document.addEventListener('keydown',e=>{ if(e.key==='Escape') hidePolicy(); });
  const contactForm = document.getElementById('contactForm');
  const sendBtn = document.getElementById('sendBtn');
  const toast = document.getElementById('toast');
  const toastMsg = document.getElementById('toastMsg');
  const toastIcon = document.getElementById('toastIcon');
  function showToast(message, ok=true){
    toast.className = 'toast show ' + (ok ? 'ok' : 'err');
    toastMsg.textContent = message;
    toastIcon.className = 'fa ' + (ok ? 'fa-circle-check' : 'fa-circle-exclamation');
    setTimeout(()=>{ toast.classList.remove('show'); }, 4200);
  }
  contactForm.addEventListener('submit', async (e)=>{
    e.preventDefault();
    sendBtn.disabled = true; sendBtn.textContent = 'Sending...';
    try{
      const fd = new FormData(contactForm);
      const res = await fetch(contactForm.action, { method: 'POST', headers: { 'Accept': 'application/json' }, body: fd });
      if (res.ok){ contactForm.reset(); showToast('Thanks! Your message has been sent successfully.'); }
      else {
        const data = await res.json().catch(()=>({}));
        const msg = data && data.errors ? data.errors.map(e=>e.message).join(', ') : 'Something went wrong. Please try again.';
        showToast(msg, false);
      }
    }catch(err){ showToast('Network error. Please try again.', false); }
    finally{ sendBtn.disabled = false; sendBtn.textContent = 'Send Message'; }
  });
</script>
