    .page-hero h1{ margin-bottom:.5rem }
    .page-hero p.sub{ color:var(--text-light); max-width:820px }
    .about-wrap{ display:grid; grid-template-columns: 1.2fr .9fr; gap:3rem; align-items:center; padding:3rem 0 }
    .about-copy p{ margin-bottom:1rem; font-size:1.07rem }
    .about-photo-wrap{ perspective:1000px; display:flex; justify-content:center }
    .about-photo{ --w: 360px; width:var(--w); max-width:100%; aspect-ratio: 4/5; border-radius: 14px; overflow:hidden; position:relative; box-shadow: 0 14px 40px rgba(0,0,0,.18); animation: floatY 6s ease-in-out infinite; will-change: transform, box-shadow; }
