    .about-photo:hover::after{ transform: translateX(120%) rotate(5deg) }
    @keyframes floatY{ 0%,100%{transform:translateY(0)} 50%{transform:translateY(-8px)} }
    .team{ background:#fafbfc; padding:3rem 0 4rem; border-top:1px solid rgba(0,0,0,.05) }
    .team h2{ margin-bottom:1rem }
    .team-sub{ color:var(--text-light); margin-bottom:2rem }
    .team-grids{ display:grid; grid-template-columns:1fr 1fr; gap:2rem }
    .team-card{ background:#fff; border-radius:12px; box-shadow: var(--shadow); padding:1.4rem; transition:.25s }
    .team-card:hover{ transform: translateY(-6px); box-shadow: var(--shadow-hover) }
    .team-head{ display:flex; align-items:center; gap:.8rem; margin-bottom:.8rem }
    .team-head .badge{ width:40px; height:40px; border-radius:10px; display:grid; place-items:center; color:#fff; font-size:1.05rem; background: linear-gradient(135deg, var(--primary-color), var(--primary-light)) }
    .team-list{ display:grid; grid-template-columns:repeat(2,minmax(160px,1fr)); gap:.65rem 1rem }
    .team-list li{ list-style:none; color:var(--text-light) }
    .team-list li i{ color:var(--accent-color); margin-right:.5rem }
    .about-cta{ display:flex; gap:12px; margin-top:1.6rem; flex-wrap:wrap }
    @media (max-width: 992px){
      .about-wrap{ grid-template-columns:1fr; gap:2rem }
      .about-photo{ --w:320px }
      .team-grids{ grid-template-columns:1fr }
